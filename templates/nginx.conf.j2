{% for domain_name, config in domains.items() %}
# Cache configuration for {{ domain_name }}
fastcgi_cache_path /etc/nginx/cache/{{ config.domain }} levels=1:2 keys_zone=phpcache_{{ config.domain | replace('.', '') }}:100m inactive=60m;
fastcgi_cache_key "$scheme$request_method$host$request_uri";

# Limits
limit_req_log_level warn;
limit_req_zone $binary_remote_addr zone=login_{{ config.domain | replace('.', '') }}:10m rate=10r/m;

# HTTP Server (redirects to HTTPS if SSL is enabled)
server {
    listen 80;
    listen [::]:80;
    server_name {{ config.domain }} www.{{ config.domain }}{% if config.extra_domains is defined %} {% for extra_domain in config.extra_domains %}{{ extra_domain }} www.{{ extra_domain }}{% endfor %}{% endif %};

    {% if config.ssl_email is defined and config.ssl_email != "" %}
    # Redirect all HTTP traffic to HTTPS
    return 301 https://$host$request_uri;
    {% else %}
    root /var/www/{{ config.domain }}/html;
    index index.php index.html index.htm;

    access_log /var/www/{{ config.domain }}/logs/access.log;
    error_log /var/www/{{ config.domain }}/logs/error.log warn;

    # Include helper configurations for HTTP
    include /etc/nginx/sites-available/{{ config.domain }}helper/cloudflare.conf;
    include /etc/nginx/sites-available/{{ config.domain }}helper/arvancloud.conf;
    include /etc/nginx/sites-available/{{ config.domain }}helper/keepalive.conf;
    include /etc/nginx/sites-available/{{ config.domain }}helper/gzip.conf;
    include /etc/nginx/sites-available/{{ config.domain }}helper/general.conf;
    include /etc/nginx/sites-available/{{ config.domain }}helper/wordpress.conf;
    include /etc/nginx/sites-available/{{ config.domain }}helper/filemanager.conf;

    location / {
        try_files $uri $uri/ /index.php?$args;
    }

    location ~ \.php$ {
        include fastcgi_params;
        fastcgi_cache_bypass $no_cache;
        fastcgi_no_cache $no_cache;
        fastcgi_cache phpcache_{{ config.domain | replace('.', '') }};
        fastcgi_cache_valid 200 301 302 30m;
        fastcgi_cache_methods GET HEAD;
        fastcgi_pass unix:/run/php/php{{ config.php_version }}-fpm.sock;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include /etc/nginx/sites-available/{{ config.domain }}helper/securityheaders.conf;
    }
    {% endif %}
}

# HTTPS Server (if SSL is enabled)
{% if config.ssl_email is defined and config.ssl_email != "" %}
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ config.domain }} www.{{ config.domain }}{% if config.extra_domains is defined %} {% for extra_domain in config.extra_domains %}{{ extra_domain }} www.{{ extra_domain }}{% endfor %}{% endif %};

    root /var/www/{{ config.domain }}/html;
    index index.php index.html index.htm;

    # SSL Configuration
    ssl_certificate /etc/letsencrypt/live/{{ config.domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ config.domain }}/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/{{ config.domain }}/chain.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;
    ssl_ciphers EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;
    ssl_session_tickets off;
    ssl_stapling on;
    ssl_stapling_verify on;
    resolver 8.8.8.8 8.8.4.4 valid=300s;
    resolver_timeout 5s;

    # Logs
    access_log /var/www/{{ config.domain }}/logs/access.log;
    error_log /var/www/{{ config.domain }}/logs/error.log warn;

    # Performance optimizations
    client_max_body_size 10M;
    fastcgi_buffers 16 16k;
    fastcgi_buffer_size 32k;
    fastcgi_read_timeout 700;
    proxy_read_timeout 700;
    proxy_connect_timeout 700;
    proxy_send_timeout 700;

    # Open file cache
    open_file_cache max=5000 inactive=60s;
    open_file_cache_valid 30s;
    open_file_cache_min_uses 2;
    open_file_cache_errors on;

    # Include helper configurations
    include /etc/nginx/sites-available/{{ config.domain }}helper/cloudflare.conf;
    include /etc/nginx/sites-available/{{ config.domain }}helper/arvancloud.conf;
    include /etc/nginx/sites-available/{{ config.domain }}helper/keepalive.conf;
    include /etc/nginx/sites-available/{{ config.domain }}helper/gzip.conf;
    include /etc/nginx/sites-available/{{ config.domain }}helper/redirects.conf;
    include /etc/nginx/sites-available/{{ config.domain }}helper/cache.conf;
    include /etc/nginx/sites-available/{{ config.domain }}helper/general.conf;
    include /etc/nginx/sites-available/{{ config.domain }}helper/wordpress.conf;
    include /etc/nginx/sites-available/{{ config.domain }}helper/filemanager.conf;

    # Main location block
    location / {
        try_files $uri $uri/ /index.php?$args;
    }

    # PHP processing
    location ~ \.php$ {
        include fastcgi_params;
        proxy_busy_buffers_size 512k;
        proxy_buffers 4 512k;
        proxy_buffer_size 256k;
        fastcgi_cache_bypass $no_cache;
        fastcgi_no_cache $no_cache;
        fastcgi_cache phpcache_{{ config.domain | replace('.', '') }};
        fastcgi_cache_valid 200 301 302 30m;
        fastcgi_cache_methods GET HEAD;
        fastcgi_max_temp_file_size 0;
        add_header X-FastCGI-Cache $upstream_cache_status;
        fastcgi_pass unix:/run/php/php{{ config.php_version }}-fpm.sock;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include /etc/nginx/sites-available/{{ config.domain }}helper/securityheaders.conf;
    }

    # Deny access to hidden files
    location ~ /\. {
        deny all;
    }

    # Custom error pages
    error_page 403 /custom_403.html;
    error_page 404 /custom_404.html;
    location = /custom_403.html {
        root /var/www/{{ config.domain }}/html;
        internal;
    }
    location = /custom_404.html {
        root /var/www/{{ config.domain }}/html;
        internal;
    }
}
{% endif %}
{% endfor %}
